{
  "name": "aegir",
  "version": "36.2.0",
  "description": "JavaScript project management",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/ipfs/aegir#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs/aegir.git"
  },
  "bugs": {
    "url": "https://github.com/ipfs/aegir/issues"
  },
  "keywords": [
    "build",
    "lint",
    "standard"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "bin": {
    "aegir": "src/index.js"
  },
  "main": "src/index.js",
  "types": "dist/src/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "*",
        "dist/*",
        "dist/src/*"
      ],
      "src/*": [
        "*",
        "dist/*",
        "dist/src/*"
      ]
    }
  },
  "files": [
    "src",
    "dist",
    "utils"
  ],
  "eslintConfig": {
    "extends": "ipfs"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Trivial Changes"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "scripts": {
    "prepare": "node . ts -p types",
    "lint": "node . lint",
    "test": "node . ts -p check && node . test",
    "test:node": "node . test -t node",
    "test:chrome": "node . test -t browser",
    "test:chrome-webworker": "node . test -t webworker",
    "test:firefox": "node . test -t browser --browser firefox",
    "test:firefox-webworker": "node . test -t webworker --browser firefox",
    "test:electron-main": "node . test -t electron-main",
    "release": "semantic-release"
  },
  "dependencies": {
    "@electron/get": "^1.12.3",
    "@polka/send-type": "^0.5.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^8.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-string": "^1.4.2",
    "@types/chai-subset": "^1.3.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.3.0",
    "@types/sinon": "^10.0.0",
    "buffer": "^6.0.3",
    "bytes": "^3.1.0",
    "c8": "^7.7.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-bites": "^0.1.2",
    "chai-parentheses": "^0.0.2",
    "chai-string": "^1.5.0",
    "chai-subset": "^1.6.0",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "conventional-github-releaser": "^3.1.5",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dependency-check": "^5.0.0-2",
    "detective-cjs": "^3.1.1",
    "detective-es6": "^2.2.0",
    "electron-mocha-main": "^11.0.3",
    "env-paths": "^2.2.1",
    "esbuild": "^0.12.15",
    "esbuild-register": "^2.3.0",
    "eslint": "^7.23.0",
    "eslint-config-ipfs": "^2.1.0",
    "eslint-plugin-etc": "^1.1.7",
    "execa": "^5.1.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^10.0.0",
    "gh-pages": "^3.1.0",
    "git-authors-cli": "^1.0.33",
    "globby": "^11.0.3",
    "ipfs-utils": "^9.0.1",
    "ipjs": "^5.1.2",
    "it-glob": "^1.0.1",
    "kleur": "^4.1.4",
    "lilconfig": "^2.0.2",
    "listr": "~0.14.2",
    "merge-options": "^3.0.4",
    "mocha": "^9.0.2",
    "npm-package-json-lint": "^5.1.0",
    "nyc": "^15.1.0",
    "ora": "^5.4.0",
    "p-map": "4.0.0",
    "pascalcase": "^1.0.0",
    "path": "^0.12.7",
    "playwright-test": "^7.0.2",
    "polka": "^0.5.2",
    "premove": "^3.0.1",
    "proper-lockfile": "^4.1.2",
    "react-native-test-runner": "^5.0.0",
    "read-pkg-up": "7.0.1",
    "semantic-release": "^18.0.1",
    "semantic-release-monorepo": "^7.0.5",
    "semver": "^7.3.5",
    "simple-git": "^2.37.0",
    "source-map-support": "^0.5.20",
    "strip-bom": "4.0.0",
    "strip-json-comments": "^3.1.1",
    "tempy": "^1.0.1",
    "typedoc": "^0.21.2",
    "typescript": "4.4.x",
    "update-notifier": "^5.0.0",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.0",
    "@types/conventional-changelog": "^3.1.0",
    "@types/cors": "^2.8.10",
    "@types/eslint": "^7.2.8",
    "@types/fs-extra": "^9.0.10",
    "@types/gh-pages": "^3.0.0",
    "@types/listr": "^0.14.2",
    "@types/pascalcase": "^1.0.0",
    "@types/polka": "^0.5.2",
    "@types/proper-lockfile": "^4.1.1",
    "@types/semver": "^7.3.4",
    "@types/update-notifier": "^5.0.0",
    "@types/yargs": "^17.0.0",
    "electron": "^16.0.2",
    "iso-url": "^1.1.5",
    "sinon": "^11.1.1",
    "util": "^0.12.4"
  },
  "browser": {
    "fs": false,
    "./utils/fixtures.js": "./utils/fixtures.browser.js"
  }
}
